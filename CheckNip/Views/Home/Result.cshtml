@model CheckNip.Models.ResultRoot

@{
    ViewData["Title"] = "Result";
}

<div class="container mt-3">
    <h2>Nazwa firmy: @Model.Result.Subject.Name</h2>
    <br>
    <!-- Nav pills -->
    <ul class="nav bg-light nav-pills greyNav" role="tablist">
        <li class="nav-item">
            <a class="nav-link text-dark active" data-bs-toggle="pill" href="#home">Ogólne</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark " data-bs-toggle="pill" href="#account">Konta bankowe</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" data-bs-toggle="pill" href="#partners">Wspólnicy</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" data-bs-toggle="pill" href="#representative">Reprezentanci</a>
        </li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div id="home" class="container tab-pane active">
            <div class="card-body">
                <p class="card-text">
                    @if (Model != null)
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Nazwa</th>
                                    <th scope="col">Dane podmiotu</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">@Html.DisplayNameFor(Model => Model.Result.Subject.Regon)</th>
                                    <td>@Html.DisplayFor(model => Model.Result.Subject.Regon)</td>
                                </tr>
                                <tr>
                                    <th scope="row">@Html.DisplayNameFor(model => Model.Result.Subject.RestorationDate)</th>
                                    <td>@Html.DisplayFor(model => Model.Result.Subject.RestorationDate)</td>
                                </tr>
                                <tr>
                                    <th scope="row">@Html.DisplayNameFor(model => Model.Result.Subject.WorkingAddress)</th>
                                    <td colspan="2">@Html.DisplayFor(model => Model.Result.Subject.WorkingAddress)</td>
                                </tr>
                                <tr>
                                    <th scope="row">@Html.DisplayNameFor(model => Model.Result.Subject.HasVirtualAccounts)</th>
                                    <td colspan="2">@Html.DisplayFor(model => Model.Result.Subject.HasVirtualAccounts)</td>
                                </tr>
                                <tr>
                                    <th scope="row">@Html.DisplayNameFor(model => Model.Result.Subject.StatusVat)</th>
                                    <td colspan="2">@Html.DisplayFor(model => Model.Result.Subject.StatusVat)</td>
                                </tr>
                                <tr>
                                    <th scope="row">@Html.DisplayNameFor(model => Model.Result.Subject.Krs)</th>
                                    <td colspan="2">@Html.DisplayFor(model => Model.Result.Subject.Krs)</td>
                                </tr>
                                <tr>
                                    <th scope="row">@Html.DisplayNameFor(model => Model.Result.Subject.RestorationBasis)</th>
                                    <td colspan="2">@Html.DisplayFor(model => Model.Result.Subject.RestorationBasis)</td>
                                </tr>
                                <tr>
                                    <th scope="row">@Html.DisplayNameFor(model => Model.Result.Subject.RegistrationDenialBasis)</th>
                                    <td colspan="2">@Html.DisplayFor(model => Model.Result.Subject.RegistrationDenialBasis)</td>
                                </tr>
                                <tr>
                                    <th scope="row">@Html.DisplayNameFor(model => Model.Result.Subject.Nip)</th>
                                    <td colspan="2">@Html.DisplayFor(model => Model.Result.Subject.Nip)</td>
                                </tr>
                                <tr>
                                    <th scope="row">@Html.DisplayNameFor(model => Model.Result.Subject.RemovalDate)</th>
                                    <td colspan="2">@Html.DisplayFor(model => Model.Result.Subject.RemovalDate)</td>
                                </tr>
                                <tr>
                                    <th scope="row">@Html.DisplayNameFor(model => Model.Result.Subject.Name)</th>
                                    <td colspan="2">@Html.DisplayFor(model => Model.Result.Subject.Name)</td>
                                </tr>
                                <tr>
                                    <th scope="row">@Html.DisplayNameFor(model => Model.Result.Subject.RegistrationLegalDate)</th>
                                    <td colspan="2">@Html.DisplayFor(model => Model.Result.Subject.RegistrationLegalDate)</td>
                                </tr>
                                <tr>
                                    <th scope="row">@Html.DisplayNameFor(model => Model.Result.Subject.RemovalBasis)</th>
                                    <td colspan="2">@Html.DisplayFor(model => Model.Result.Subject.RemovalBasis)</td>
                                </tr>
                                <tr>
                                    <th scope="row">@Html.DisplayNameFor(model => Model.Result.Subject.Pesel)</th>
                                    <td colspan="2">@Html.DisplayNameFor(model => Model.Result.Subject.Pesel)</td>
                                </tr>
                                <tr>
                                    <th scope="row">@Html.DisplayNameFor(model => Model.Result.Subject.ResidenceAddress)</th>
                                    <td colspan="2">@Html.DisplayFor(model => Model.Result.Subject.ResidenceAddress)</td>
                                </tr>
                                <tr>
                                    <th scope="row">@Html.DisplayNameFor(model => Model.Result.Subject.RegistrationDenialDate)</th>
                                    <td colspan="2">@Html.DisplayFor(model => Model.Result.Subject.RegistrationDenialDate)</td>
                                </tr>
                            </tbody>
                        </table>
                    }
                </p>

            </div>
        </div>
        <div id="account" class="container tab-pane fade">
            <br>
            @if (Model != null)
            {
                <dl class="row">
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => Model.Result.Subject.AccountNumbers)
                    </dt>
                    <dd class="col-sm-10">
                        @if (Model.Result.Subject.AccountNumbers != null)
                            @foreach (var account in Model.Result.Subject.AccountNumbers)
                            {
                                @account <br />
                            }
                    </dd>
                </dl>
               
            }
        </div>
        <div id="partners" class="container tab-pane fade">
            <br>  
            @if (Model.Result.Subject.Partners != null)
            {
                @foreach (var partner in Model.Result.Subject.Partners)
                {
                    @partner.FirstName <br />
                    @partner.LastName <br />
                    @partner.Nip <br />
                    @partner.pesel <br />
                    @partner.CompanyName <br />
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Nazwa</th>
                                <th scope="col">Dane wspólnika</th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr>
                                <th scope="row">@Html.DisplayName("Imie")</th>
                                <td>@partner.FirstName</td>
                            </tr>
                            <tr>
                                <th scope="row">@Html.DisplayName("Nazwisko")</th>
                                <td>@partner.LastName</td>
                            </tr>
                            <tr>
                                <th scope="row">@Html.DisplayName("NIP")</th>
                                <td colspan="2"> @partner.Nip</td>
                            </tr>
                            <tr>
                                <th scope="row">@Html.DisplayName("PESEL")</th>
                                <td colspan="2">@partner.pesel</td>
                            </tr>
                            <tr>
                                <th scope="row">@Html.DisplayName("Nazwa firmy")</th>
                                <td colspan="2">@partner.CompanyName</td>
                            </tr>

                        </tbody>
                    </table>
                }
            }
        </div>
        <div id="representative" class="container tab-pane fade">
            <br>
            @if (Model.Result.Subject.Representatives != null)
            {
                @foreach (var partner in Model.Result.Subject.Representatives)
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Nazwa</th>
                                <th scope="col">Dane wspólnika</th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr>
                                <th scope="row">@Html.DisplayName("Imie")</th>
                                <td>@partner.FirstName</td>
                            </tr>
                            <tr>
                                <th scope="row">@Html.DisplayName("Nazwisko")</th>
                                <td>@partner.LastName</td>
                            </tr>
                            <tr>
                                <th scope="row">@Html.DisplayName("NIP")</th>
                                <td colspan="2"> @partner.Nip</td>
                            </tr>
                            <tr>
                                <th scope="row">@Html.DisplayName("PESEL")</th>
                                <td colspan="2">@partner.pesel</td>
                            </tr>
                            <tr>
                                <th scope="row">@Html.DisplayName("Nazwa firmy")</th>
                                <td colspan="2">@partner.CompanyName</td>
                            </tr>

                        </tbody>
                    </table>
                }
            }
        </div>
    </div>
</div>

<div>    
    <a asp-action="Index">Wstecz</a>
</div>
